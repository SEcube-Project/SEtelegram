QMainWindow#ChatWindow {
  border-image: url(../resources/wallpaper.png) 0 0 0 0 stretch stretch;
}

QScrollArea {
  background-color : transparent;
}

QLabel#selezionaChatLabel {
  color: white;
  font-size: 12pt;
  font-weight: bold;
  background-color: rgba(0,0,0,24);
  border-radius: 18px;
  padding: 4px 12px 4px 12px;
}


QPushButton#chatButton {
  border: none;
  font-size: 12pt;
  text-align: left;
  padding: 10px 6px 10px 6px;
  background-color: #f7fafa;
  width: available;
}



QPushButton#chatButton::hover {
  background-color: #e6e8e8;
}

