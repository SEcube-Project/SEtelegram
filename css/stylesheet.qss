QPushButton#myMessageButton {
  background-color: #d8f7cb;
  color : #272d30;
  border-radius: 8px;
  padding: 6px;
}

QPushButton#othersMessageButton {
  background-color : #f7fafa;
  color : #272d30;
  border-radius: 8px;
  padding: 6px;
}

QTextEdit#textMessageEdit {
  border: none;
  background-color: #f7fafa;
}

QWidget#inputWidget {
  background-color: #f7fafa;
}

QPushButton#attachmentButton {
  border-image: url(../resources/attach-light.png) 6px 6px 6px 6px;
  border-top: 6px transparent;
  border-bottom: 6px transparent;
  border-right: 6px transparent;
  border-left: 6px transparent;
}
QPushButton#attachmentButton:hover {
  border-image: url(../resources/attach-dark.png) 6px 6px 6px 6px;
  border-top: 6px transparent;
  border-bottom: 6px transparent;
  border-right: 6px transparent;
  border-left: 6px transparent;
}

QPushButton#sendButton {
  border-image: url(../resources/send-light.png) 6px 6px 6px 6px;
  border-top: 6px transparent;
  border-bottom: 6px transparent;
  border-right: 6px transparent;
  border-left: 6px transparent;
  margin-top: 2px;
  margin-right: 4px;
  margin-bottom: 4px;
}
QPushButton#sendButton:hover {
  border-image: url(../resources/send-dark.png) 6px 6px 6px 6px;
  border-top: 6px transparent;
  border-bottom: 6px transparent;
  border-right: 6px transparent;
  border-left: 6px transparent;
}

QTextEdit#textMessageEdit {
  font-size: 12pt;
  padding: 14px, 10px, 10px, 8px;
}

